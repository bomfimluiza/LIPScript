<div class="sidemenu">
    <h2>Car Rental System</h2>
    <hr>
    <%= button_to 'Rentals', rentals_path, :method => "get", class:"btnto" %>
    <%= button_to 'Cars', cars_path, :method => "get", class:"btnto" %>
    <%= button_to 'Clients', clients_path, :method => "get", class:"btnto" %>
</div>

<div class="content">
    <div class="container">
        <h2>Cars</h2>
    </div>
    <div class="container_new">
        <%= button_to 'New Car', new_car_path, method:"get", class:"btnnew" %>
    </div>

    <div class="table-wrapper">
        <table>
            <tr class="thead">
                <th>Plate</th>
                <th>Car Type</th>
                <th>Year</th>
                <th colspan="3"></th>
            </tr>

            <% @car.each do |car| %>
                <tr class="tbody">
                    <td><%= car.plate %></td>
                    <td>
                    <% if car.cartype == 1 %>
                        Urban
                    <% end %>
                    <% if car.cartype == 2 %>
                        Motocross
                    <% end %>
                    <% if car.cartype == 3 %>
                        Luxury
                    <% end %>
                    </td>
                    <td><%= car.year %></td>
                    <td><%= link_to 'Show', car_path(car) %></td>
                    <td><%= link_to 'Edit', edit_car_path(car) %></td>
                    <td><%= link_to 'Delete', car_path(car),
                            method: :delete,
                            data: { confirm: 'Are you sure?' } %></td>
                </tr>
            <% end %>
        </table>
    </div>

    <div class="container_back">
        <%= button_to 'Back', root_path, method:"get", class:"btnback" %>
    </div>
</div>