<h2>Listing Clients</h2>

<%= link_to 'New client', new_client_path %>
<table>
 <tr>
   <th>Name</th>
   <th>Address</th>
   <th>CPF</th>
   <th>RG</th>
   <th colspan="3"></th>
 </tr>

 <% @client.each do |client| %>
   <tr>
     <td><%= client.name %></td>
     <td><%= client.address %></td>
     <td><%= client.cpf %></td>
     <td><%= client.rg %></td>
     <td><%= link_to 'Show', client_path(client) %></td>
     <td><%= link_to 'Edit', edit_client_path(client) %></td>
     <td><%= link_to 'Delete', client_path(client),
             method: :delete,
             data: { confirm: 'Are you sure?' } %></td>
   </tr>
 <% end %>
</table>